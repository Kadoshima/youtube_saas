{
  "expo": {
    "name": "YouTube Shorts Creator",
    "slug": "youtube-shorts-creator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.youtubesaas.shortscreator",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to record videos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select videos.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save videos to photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.youtubesaas.shortscreator",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-media-library"
    ]
  }
}